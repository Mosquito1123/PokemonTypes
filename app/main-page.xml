  <StackLayout class="m-20">
    <Repeater items="{{ types }}">
      <Repeater.itemsLayout>
        <FlexboxLayout class="main-layout" />
      </Repeater.itemsLayout>
      <Repeater.itemTemplate>
        <StackLayout>
          <Button
